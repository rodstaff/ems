<p>
  <strong>ID:</strong>
  <%= @employee.id %>
</p>

<p>
  <strong>First Name:</strong>
  <%= @employee.first_name %>
</p>
 
<p>
  <strong>Last Name:</strong>
  <%= @employee.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @employee.email %>
</p>

<% @employee.cars.each do |car| %>
  <p>
    <strong>Model:</strong>
    <%= car.model %>
  </p>
 
  <p>
    <strong>Note:</strong>
    <%= car.note %>
  </p>
<% end %> 

<h2>Add cars:</h2>
<%= form_for([@employee, @employee.cars.build]) do |f| %>
  <p>
    <%= f.label :model %><br>
    <%= f.text_area :model %>
  </p>
  <p>
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %> 
<%= link_to 'Back', employees_path %>
<%= link_to 'Edit', edit_employee_path(@employee) %> |